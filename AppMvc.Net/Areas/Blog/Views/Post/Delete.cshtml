@model AppMvc.Net.Models.Blog.Post
@using AppMvc.Net.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Xóa bài viết";    Layout =  "/Views/Shared/_LayoutAdmin.cshtml";

}

<h1>@ViewData["Title"]</h1>
<p>Có chắc chắn xóa bài viết?</p>
<h4>@Model.Title</h4>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Danh sách bài viết</a>
    </form>
</div>
@{
    _AdminSidebarService.SetActive("Post", "Index", "Blog");
}

@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}